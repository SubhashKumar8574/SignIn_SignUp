<head>
    {{>header}}
</head>

<body>



    <header class="registration-header">
        <div class="container">
            <div class="logo">
                <a href="#">EngineersHub</a>
            </div>
            <nav>
                <ul>
                    <li class="link"><a href="/">Home</a></li>
                    <li class="link"><a href="/">About</a></li>
                    <li class="link"><a href="/login">login</a></li>
                    <li class="link"><a href="/register">Registration</a></li>
                </ul>
            </nav>
        </div>

        <main>

            <section class="user-container login-section--display">

                <div class="registration">
                    <div class="grid-two--column">
                        <div class="form-text">
                            <h2>Welcome Back!</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et, labore.</p>
                            <button class="login-btn">Login Here</button>
                        </div>

                        <div class="registration-form">
                            <div id="cancel-btn1" class="cancel-btn">
                                <i class="fa-regular fa-circle-xmark"></i>
                            </div>
                            <h2>Create Account</h2>
                            <div class="social-icons">
                                <a href="https://twitter.com" target="_blank">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>
                                <a href="https://discord.com" target="_blank">
                                    <i class="fa-brands fa-discord"></i>
                                </a>
                                <a href="https://www.youtube.com" target="_blank">
                                    <i class="fa-brands fa-youtube"></i>
                                </a>
                                <a href="https://www.linkedin.com" target="_blank">
                                    <i class="fa-brands fa-linkedin"></i>
                                </a>
                            </div>
                            <p>Or use your Emails for registration</p>

                            <form action="/register" method="post">

                                <div class="input-field">
                                    <label for="username">
                                        <input type="text" name="name" id="username" placeholder="Name">
                                    </label>
                                </div>
                                <div class="input-field">
                                    <label for="Email">
                                        <input type="email" name="email" value="" id="Email" placeholder="Email">
                                    </label>
                                </div>
                                <div class="input-field">
                                    <label for="Password">
                                        <input type="password" id="Password" placeholder="Password" name="password"
                                            value="">
                                    </label>
                                </div>
                                <div class="input-field">
                                    <label for="Confirm Password">
                                        <input type="password" id="ConfirmPassword" placeholder="Confirm Password"
                                            name="confirmPassword" value="">
                                    </label>
                                </div>
                                <div class="input-field">
                                    <input type="submit" value="register">
                                </div>
                            </form>

                        </div>

                    </div>

                </div>

                <div class="login">
                    <div class="grid-two--column">

                        <div class="form-text">
                            <h2>Hello Friend!</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et, labore.</p>
                            <button class="registration-btn">Register Here</button>
                        </div>

                        <div class="login-form">
                            <div id="cancel-btn2" class="cancel-btn">
                                <i class="fa-regular fa-circle-xmark"></i>
                            </div>
                            <h2>Sign In</h2>
                            <div class="social-icons">
                                <a href="https://twitter.com" target="_blank">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>
                                <a href="https://discord.com" target="_blank">
                                    <i class="fa-brands fa-discord"></i>
                                </a>
                                <a href="https://www.youtube.com" target="_blank">
                                    <i class="fa-brands fa-youtube"></i>
                                </a>
                                <a href="https://www.linkedin.com" target="_blank">
                                    <i class="fa-brands fa-linkedin"></i>
                                </a>
                            </div>
                            <p>or Use your Account1</p>

                            <form action="/login" method="post">

                                <div class="input-field">
                                    <label for="Email">
                                        <input type="email" name="email" id="Email1" placeholder="Email">
                                    </label>
                                </div>
                                <div class="input-field">
                                    <label for="Password">
                                        <input type="password" name="password" id="Password1" placeholder="Password">
                                    </label>
                                </div>
                                <div class="input-field">
                                    <input type="submit" value="SignIn">
                                </div>
                            </form>

                        </div>

                    </div>

                </div>

            </section>

        </main>

    </header>

    <!-- Script -->
    <script>
        const user_con = document.querySelector(".user-container");
        const regis_btn = document.querySelector(".registration-btn");
        const login_btn = document.querySelector(".login-btn");
        const cancel_btn = document.querySelectorAll(".cancel-btn");


        regis_btn.addEventListener('click', () => {
            user_con.classList.add('login-section--display');
        });
        login_btn.addEventListener('click', () => {
            user_con.classList.remove('login-section--display');
        });


        cancel_btn.forEach(cancel_btn => {
            cancel_btn.addEventListener('click', () => {
                user_con.style.display = "none";
                window.open("/", "_self");
            })

        });
    </script>
</body>